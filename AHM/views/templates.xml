<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="index">
    <t t-call="website.layout">
        <a role="button" t-attf-href="/create/" >Create</a>        
            <table class="table-sm">
                <div>
                    <tr t-foreach="stock" t-as="doc">

                    <td class="pb_text_left line_left">
                        <span t-esc="doc.name" t-att-value="doc.name"/>
                    </td>
                    <td class="pb_text_left line_left">
                         <span t-esc="doc.comp"  t-att-value="doc.comp"/>
                    </td>
                    <td>
                        <a t-attf-href="/update/{{slug(doc)}}" >
                        <i class="fa fa-edit"/>
                        </a>
                    </td>
                    <td>
                        <a t-attf-href="/delete/{{slug(doc)}}/">
                        <i class="fa fa-trash"/>
                        </a>
                    </td>                    
                </tr>
            </div>
        </table>
    </t>
</template>    


<template id="index1">
    <t t-call="website.layout">
                <div>
                    <form method="post" action="/save/">

                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />

                    <input type="hidden" name="id" t-attf-value="#{d.id if d else ''}" />

                    <input type="text" name="name" t-attf-value="#{d.name if d else ''}"/>

                    <input type="text" name="comp" t-attf-value="#{d.comp if d else ''}"/>

    <button type="submit">Submit</button>
</form>
                </div>
</t>
</template>


</odoo> 