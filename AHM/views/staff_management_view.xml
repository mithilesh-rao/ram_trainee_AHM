<?xml version="1.0" encoding="UTF-8"?>
<odoo>


<record id="registration_tree_view" model="ir.ui.view">
    <field name="name">ahm.registration.tree</field>
    <field name="model">ahm.registration</field>
    <field name="arch" type="xml">
        <tree string="Registration Form">
            <field name="name"/>
            <field name="contact"/>
            <field name="email"/>
            <field name="address"/>
            <field name="specialization"/>
        </tree>
    </field>
</record>


<record id="registration_form_view" model="ir.ui.view">
    <field name="name">ahm.registration.form</field>
    <field name="model">ahm.registration</field>
    <field name="arch" type="xml">
        <form string="Registration Form">            
            <header>
                <button name="draft" string="Draft" type="object" decoration-warning="status=='draft'" />
                <button name="confirm" string="Confirm" type="object" decoration-info="status=='confirm'" />
                <button name="done" string="Done" type="object" decoration-success="status=='done'"/>
                <field name="status" widget="statusbar"/>
            </header>
            <sheet>
                <group>
                    <group>
                        <field name="image" widget="image" class="oe_avatar oe_left"/>
                    </group>
                    <group string="Name">
                        <field name="name"/>   
                    </group>    
                    <group string="Personal Details">
                        <field name="contact"/>
                        <field name="email"/>
                        <field name="address"/>
                    </group>
                    <group string="Additional">
                        <field name="visiting_time"/>
                        <field name="specialization"/>
                        <field name="degree_certificate" widget="image" class="oe_avatar oe_left"/>
                    </group>
                </group>
            </sheet>
        </form>
    </field>
</record>


<record id="view_registration_kanban" model="ir.ui.view">
    <field name="name">ahm.registration.kanban</field>
    <field name="model">ahm.registration</field>
    <field name="arch" type="xml">
        <kanban>
            <!-- <field name="name" context="{'group_by': 'name'}"/> -->
                <field name="name"/>
                <field name="image" widget="oe_avatar"/>
                <field name="contact"/>
                <field name="email"/>
                <field name="address"/>
                <field name="visiting_time"/>
                <field name="specialization"/>
                <field name="degree_certificate"/>
                <field name="status"/>
                <field name="id"/>
                <templates>
                     <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <strong>
                                Dr.
                                <field name="name"/>
                                <div class="oe_kanban_avatar float-right">
                                <img t-att-src="kanban_image('ahm.registration','image',record.id.raw_value)" alt="Image" width="75" height="75"/>
                                </div>
                                <br/>Contact:
                                <field name="contact"/>
                                <br/>Email:
                                <field name="email"/>
                                 <br/>Specialization:
                                <field name="specialization"/>
                            </strong>
                        </div>
                     </t>
                </templates>
            </kanban>
    </field>
</record>



<record id="registration_action" model="ir.actions.act_window">
    <field name="name">Doctor Registration</field>
    <field name="res_model">ahm.registration</field>
    <field name="view_mode">tree,form,kanban</field>
</record>

<record id="organization_registration_tree_view" model="ir.ui.view">
    <field name="name">ahm.organization_registration.tree</field>
    <field name="model">ahm.organization.registration</field>
    <field name="arch" type="xml">
        <tree string="Animal Registration Form">
            <field name="org_name"/>
            <field name="org_registration_no"/>
            <field name="contact"/>
            <field name="email"/>
            <field name="facility"/>
            <field name="address"/>
            <field name="visiting_time"/>
            <field name="helpline_number"/>
        </tree>
    </field>
</record>

<record id="organization_registration_action" model="ir.actions.act_window">
    <field name="name">Organization Registration</field>
    <field name="res_model">ahm.organization.registration</field>
    <field name="view_mode">tree,form</field>
</record>


    <menuitem id="staff_management" name="Staff Management" parent="AHM.registration_menu"/>

    <menuitem id="registration_sub_menu_1" name="Doctor Registration" parent="staff_management" action="registration_action" sequence="1"/>

    <menuitem id="organization_registration_sub_menu_1" name="Organization Registration" parent="staff_management" action="organization_registration_action"/>

</odoo>